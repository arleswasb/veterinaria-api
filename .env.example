# Configurações do ambiente
ENVIRONMENT=development  # development, production
DEBUG=true

# Configurações da aplicação
APP_NAME="API de Gerenciamento de Clínicas Veterinárias"
APP_VERSION="1.0.0"

# Configurações de autenticação JWT
SECRET_KEY=your-super-secret-key-change-in-production-veterinaria-api-2024
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Configurações do banco de dados
# Para desenvolvimento (SQLite)
DATABASE_URL=sqlite:///./veterinaria.db

# Para produção (PostgreSQL) - descomente e configure:
# DATABASE_URL=postgresql://postgres:sua_senha@localhost:5432/veterinaria_db
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=sua_senha_aqui
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DB=veterinaria_db
